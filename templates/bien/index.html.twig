{% extends 'base.html.twig' %}

{% block title %}Bien index{% endblock %}

{% block body %}
    <h1>Bien index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Surface</th>
                <th>Nbrepieces</th>
                <th>Nbrechambres</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Codepostale</th>
                <th>Vendu</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Energie</th>
                <th>Prix</th>
                <th>Imagefile</th>
                <th>Descriptions</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bien in biens %}
            <tr>
                <td>{{ bien.id }}</td>
                <td>{{ bien.titre }}</td>
                <td>{{ bien.description }}</td>
                <td>{{ bien.surface }}</td>
                <td>{{ bien.nbrepieces }}</td>
                <td>{{ bien.nbrechambres }}</td>
                <td>{{ bien.adresse }}</td>
                <td>{{ bien.ville }}</td>
                <td>{{ bien.codepostale }}</td>
                <td>{{ bien.vendu ? 'Yes' : 'No' }}</td>
                <td>{{ bien.createdAt ? bien.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ bien.updatedAt ? bien.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ bien.energie }}</td>
                <td>{{ bien.prix }}</td>
                <td>{{ bien.imagefile }}</td>
                <td>{{ bien.descriptions }}</td>
                <td>
                    <a href="{{ path('bien_show', {'id': bien.id}) }}">show</a>
                    <a href="{{ path('bien_edit', {'id': bien.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="17">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bien_new') }}">Create new</a>
{% endblock %}
