		{% block javascripts %}
			{#{{ encore_entry_script_tags('app') }}#}
		{% endblock %}
	</head>
	<body>

		{% include "shared/_nav.html.twig" %}
		{% include "shared/_header.html.twig" %}

		<div class="container my-2"> {% block body %}{% endblock %}
			</div>

			{% include "shared/_footer.html.twig" %}
		</body>
	</html>
